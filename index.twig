{% extends 'writus.layout.twig' %}

{% block content %}
    {{ pageTitle ? '<h2 class="index-title">' ~ pageTitle ~ '</h2>' }}
    {% for post in posts %}

    <article id="post-{{ post.id }}">
        <header class="post-header">
            <h3 class="post-title"><a href="/{{post.url}}">{{post.title}}</a></h3>
            <p class="post-time">
                <time datetime="{{post.date|date('Y-m-d')}}">{{post.date|date('d M Y')}}</time>
                by {{ post.author }}
            </p>
        </header>
        
        <section class="post-excerpt">
            <p>{{ post.body|striptags|truncate(400, true, '') }}&hellip;</p>
        </section>
        
       
    </article>
    {% endfor %}

    {% if prevPage %}
    <div class="text-left"><a href="/all/{{ prevPage }}">&laquo; newer</a></div>
    {% endif %}
    {% if nextPage %}
    <div class="text-right"><a href="/all/{{ nextPage }}">older &raquo;</a></div>
    {% endif %}
{% endblock %}   

